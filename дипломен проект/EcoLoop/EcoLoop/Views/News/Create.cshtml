@model EcoLoop.Models.NewsFormViewModel
@{
    ViewData["Title"] = "Добави новина";
}

@section Styles {
    <link rel="stylesheet" href="~/css/news.css" asp-append-version="true" />
}

<section class="news-form-wrap">
    <h1>Добави новина</h1>
    <form asp-action="Create" method="post" class="news-form-card">
        @Html.AntiForgeryToken()
        <partial name="_NewsForm" model="Model" />

        <div class="news-form-actions">
            <a class="btn btn-outline-secondary" asp-action="All">Отказ</a>
            <button class="btn btn-success" type="submit">Публикувай</button>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
