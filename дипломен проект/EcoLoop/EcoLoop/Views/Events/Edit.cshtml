@model EventFormViewModel

@{
    ViewData["Title"] = "Редакция на събитие";
}


@section Styles {
    <link rel="stylesheet" href="~/css/events.css" />
}
<section class="events-form-page">
    <header class="events-form-header">
        <h1>Редактирай събитие</h1>
        <p class="small-muted mb-0">Обнови информацията и запази промените.</p>
    </header>

    <form asp-action="Edit" method="post" class="events-form-shell">
        <input asp-for="Id" type="hidden" />
        @Html.Partial("_EventForm", Model)

        <div class="events-form-actions">
            <button type="submit" class="btn btn-primary">Запази промените</button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-ghost">Отказ</a>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
