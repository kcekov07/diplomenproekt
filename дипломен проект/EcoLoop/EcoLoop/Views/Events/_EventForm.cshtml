@model EventFormViewModel

<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

<div class="events-form-grid">
    <label class="events-filter-field">
        <span>Заглавие</span>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </label>

    <label class="events-filter-field">
        <span>Снимка (URL)</span>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </label>

    <label class="events-filter-field">
        <span>Дата</span>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </label>

    <label class="events-filter-field">
        <span>Тип</span>
        <input asp-for="Type" class="form-control" placeholder="Напр. Swap Party" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </label>

    <label class="events-filter-field">
        <span>Град</span>
        <input asp-for="City" class="form-control" placeholder="София" />
        <span asp-validation-for="City" class="text-danger"></span>
    </label>

    <label class="events-filter-field events-filter-field--full">
        <span>Кратко описание</span>
        <textarea asp-for="ShortDescription" class="form-control" rows="4"></textarea>
        <span asp-validation-for="ShortDescription" class="text-danger"></span>
    </label>
</div>
