@model EcoLoop.Models.HomeViewModel

<section class="home-hero">
    <div class="hero-copy">
        <span class="hero-badge">Устойчива общност</span>
        <h1 class="hero-title">Открий зеления живот около теб</h1>
        <p class="lead">EcoLoop ти помага да намериш еко магазини, събития и новини в твоя град.</p>
        <div class="hero-actions">
            <a class="btn btn-primary" href="/Map">Разгледай картата</a>
            <a class="btn btn-secondary" href="/Store/Add">Добави нов обект</a>
        </div>
    </div>
    <div class="hero-stats">
        <div class="hero-stat-card">
            <strong>@Model.StoresCount+</strong>
            <span>Еко магазина</span>
        </div>
        <div class="hero-stat-card">
            <strong>@Model.EventsCount+</strong>
            <span>Събития</span>
        </div>
        <div class="hero-stat-card">
            <strong>@Model.ReviewsCount+</strong>
            <span>Мнения от общността</span>
        </div>
    </div>
</section>
<section>
    <h3 class="section-title">🏪 Близо до теб</h3>
        <div class="cards" aria-live="polite">
        @if (Model.NearbyStores.Any())
        {
            foreach (var s in Model.NearbyStores)
            {
                <article class="store-card" role="article">
                    @if (!string.IsNullOrEmpty(s.ImageUrl))
                    {
                        <img src="@s.ImageUrl" alt="@s.Name" />
                    }
                    else
                    {
                        <div class="card-image-placeholder">Няма изображение</div>
                    }

                    <div class="card-body">
                        <h5 class="card-title">@s.Name</h5>
                        <p class="small-muted">@s.Category</p>
                        @if (!string.IsNullOrWhiteSpace(s.ShortDescription))
                        {
                            <p class="small-muted">@s.ShortDescription</p>
                        }

                        <div class="card-body">
                            <h5 class="card-title">@s.Name</h5>
                            <p class="small-muted">@s.Category</p>
                            @if (!string.IsNullOrWhiteSpace(s.ShortDescription))
                            {
                                <p class="small-muted" style="margin-top:8px;">@s.ShortDescription</p>
                            }
                            <a class="btn-outline-success" href="/Store/Details/@s.Id">Виж детайли</a>
                    </div>
                </article>
            }
        }
        else
        {
            <div class="card-plain">Няма добавени обекти.</div>
        }
    </div>
</section>

<section>
    <h3 class="section-title">📰 Топ новини</h3>
    <div class="news-grid">
        @if (Model.TopNews.Any())
        {
            foreach (var n in Model.TopNews)
            {
                 <article class="card-plain">
                    <h5>@n.Title</h5>
                    <p class="small-muted">@n.Category</p>
                    <p>@n.ShortContent</p>
                    <a class="btn-link" href="/News/Details/@n.Id">Чети повече</a>
                </article>
            }
        }
        else
        {
            <div class="card-plain">Няма новини.</div>
        }
</section>

<section>
    <h3 class="section-title">📅 Предстоящи събития</h3>
    <div class="events-grid">
        @if (Model.UpcomingEvents.Any())
        {
            foreach (var e in Model.UpcomingEvents)
            {
               <article class="card-plain">
                    <h5>@e.Title</h5>
                    <p class="small-muted">@e.Date.ToLocalTime().ToString("dd MMM yyyy") — @e.City</p>
                    <p>@e.ShortDescription</p>
                    <a class="btn-link" href="/Events/Details/@e.Id">Виж</a>
                </article>
            }
        }
        else
        {
            <div class="card-plain">Няма предстоящи събития.</div>
        }
    </div>

</section>